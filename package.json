{
  "name": "clean-node-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --watchAll --silent --colors --noStackTrace",
    "test:staged": "jest --passWithNoTests --findRelatedTest --silent --noStackTrace",
    "test:ci": "jest --coverage --silent --noStackTrace"
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "npm run test:staged",
      "git add"
    ]
  },
  "standard": {
    "env": ["jest"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "husky": "^4.3.8",
    "jest": "^28.0.3",
    "lint-staged": "^12.4.1",
    "standard": "^17.0.0"
  }
}
